<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".police">

    <!-- Colored Header Bar -->
    <View
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_light"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/header_bar"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="6dp"
        android:translationZ="6dp"/>

    <!-- Title container centered over the bar -->
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_back"
        app:layout_constraintHorizontal_bias="0.9">

        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discreet Dispatch"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Police Response Request"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container for Contents in vertical layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name Field -->
            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your name:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:labelFor="@id/et_name" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:layout_margin="20dp"
                android:hint="Name"
                android:textSize="16sp"/>

            <!-- Gender Field -->
            <TextView
                android:id="@+id/label_gender_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/GenderOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Address Field -->
            <TextView
                android:id="@+id/label_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your address:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:labelFor="@id/et_address" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_address"
                android:layout_margin="20dp"
                android:hint="Street Address, City, State, Zip  "
                android:textSize="16sp"/>

            <!-- Call Type Field -->
            <TextView
                android:id="@+id/label_call_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nature of Call:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/CallOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <RadioButton
                    android:id="@+id/theft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theft"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/collision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collision"
                    android:textSize="16sp"/>
                <RadioButton
                    android:id="@+id/intruder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="intruder"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attack"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Personal Danger Field -->
            <TextView
                android:id="@+id/label_danger_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you in immediate Danger?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/DangerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <RadioButton
                    android:id="@+id/danger_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/danger_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Personal Retreat Field -->
            <TextView
                android:id="@+id/label_safety_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can you get to safety?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/SafetyOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <RadioButton
                    android:id="@+id/safety_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/safety_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Other's Safety Field -->
            <TextView
                android:id="@+id/label_others_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is anyone else hurt or in danger?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/OthersOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp">

                <RadioButton
                    android:id="@+id/others_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/others_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Other's Safety Info -->
            <TextView
                android:id="@+id/label_others_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If so, how many persons and what are their conditions?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:labelFor="@id/et_others_details" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_others_details"
                android:layout_margin="20dp"
                android:hint="Number of persons, any injuries, concious/unconcious, can they get to safety?"
                android:textSize="16sp"/>

            <!-- Offender(s) Info -->
            <TextView
                android:id="@+id/label_offender_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Describe the offender or offenders:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:labelFor="@id/et_offender_details" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_offender_details"
                android:layout_margin="20dp"
                android:hint="Gender, Race, Height, Build, Clothing, Vehicle and Licensece Plate, etc."
                android:textSize="16sp"/>

            <!-- Finish Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_finish"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="FINISH"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:elevation="6dp"
                android:translationZ="6dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>